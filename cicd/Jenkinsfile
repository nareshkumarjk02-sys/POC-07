pipeline {
    agent any
    environment {
        AWS_REGION = 'ap-south-1'
        ECR_REPO = '442027455290.dkr.ecr.ap-south-1.amazonaws.com/node-cicd-poc'
        GIT_BRANCH = 'main'
        IMAGE_TAG = "${env.BUILD_NUMBER}-${env.GIT_COMMIT.substring(0,7)}"
    }
    stages {
        stage('Checkout') { 
            steps { 
                checkout scm
                script {
                    sh """
                        git checkout ${GIT_BRANCH} || git checkout -b ${GIT_BRANCH}
                        git pull origin ${GIT_BRANCH} || true
                    """
                }
            } 
        }
        stage('Install & Test') {
            steps {
                dir('node-app') {
                    sh 'npm ci'
                    sh 'npm test || true'
                }
            }
        }
        stage('SonarQube') {
            steps {
                echo 'Run SonarQube analysis (placeholder)'
            }
        }
        stage('Build Image') {
            steps {
                sh 'cd node-app && docker build -t $ECR_REPO:$IMAGE_TAG .'
            }
        }
        stage('Scan Image') {
            steps {
                sh "trivy image --exit-code 1 --severity HIGH,CRITICAL $ECR_REPO:$IMAGE_TAG || true"
            }
        }
        stage('Push to ECR') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-ecr-cred', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                        aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin 442027455290.dkr.ecr.$AWS_REGION.amazonaws.com
                        docker push $ECR_REPO:$IMAGE_TAG
                    '''
                }
            }
        }
        stage('Update Helm Values') {
            steps {
                sshagent(['github-ssh-key']) {
                    script {
                        sh """
                            # Update image tag in values.yaml
                            sed -i 's|tag:.*|tag: "${IMAGE_TAG}"|g' helm/node-cicd-poc/values.yaml
                            
                            # Configure git
                            git config user.name "nareshkumarjk02-sys"
                            git config user.email "nareshkumarjk02@gmail.com"
                            
                            # Check if there are changes
                            if git diff --quiet helm/node-cicd-poc/values.yaml; then
                                echo "No changes to commit"
                            else
                                # Add and commit changes
                                git add helm/node-cicd-poc/values.yaml
                                git commit -m "Update image tag to ${IMAGE_TAG} [skip ci]"
                                
                                # Convert remote to SSH if needed
                                git remote set-url origin git@github.com:nareshkumarjk02-sys/POC-07.git
                                
                                # Push using SSH
                                git push origin HEAD:${GIT_BRANCH}
                            fi
                        """
                    }
                }
            }
        }
        
        stage('Trigger ArgoCD Sync') {
            steps {
                script {
                    sh """
                        kubectl annotate application node-cicd-poc -n argocd \
                        argocd.argoproj.io/refresh=hard --overwrite
                    """
                }
            }
        }
    }
    post {
        success {
            echo "✅ Pipeline completed successfully! Image: ${ECR_REPO}:${IMAGE_TAG}"
        }
        failure {
            echo "❌ Pipeline failed!"
        }
        always {
            sh 'docker system prune -f'
        }
    }
}